<%- include('./partials/header') %>
<%- include('./partials/main_nav') %>

<div class="container my-4">
  <h1>Delete Habit</h1>

  <div class="alert alert-danger">
    Are you sure you want to delete this habit?
  </div>

  <ul>
    <li><strong>Habit:</strong> <%= habit.habitName %></li>
    <li><strong>Frequency:</strong> <%= habit.frequency %></li>
    <li><strong>Streak:</strong> <%= habit.streak %></li>
  </ul>

  <form action="/habits/delete/<%= habit._id %>" method="POST" class="mt-3">
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a href="/habits" class="btn btn-secondary ms-2">Cancel</a>
  </form>
</div>

<%- include('./partials/footer') %>
